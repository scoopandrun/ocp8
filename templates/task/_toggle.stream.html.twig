<turbo-stream action="update" target="task-{{ task.id }}-icon">
  <template>
    {% if task.isDone %}<i class="bi-check"></i>{% else %}<i class="bi-x"></i>{% endif %}
  </template>
</turbo-stream>

<turbo-stream action="append" target="flashes">
  <template>
    {{ include('_flash.html.twig') }}
  </template>
</turbo-stream>
