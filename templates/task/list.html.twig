{% extends 'base.html.twig' %}

{% block header_img %}<img class="w-100" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <div class="row">
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="card">
                <div class="card-body">
                    <div class="clearfix">
                        <h5 class="card-title float-start">
                            <a href="{{ path('task.edit', {'id' : task.id }) }}" class="link-primary text-decoration-none">{{ task.title }}</a>
                        </h5>
                        <h4 class="float-end">
                            {% if task.isDone %}<i class="bi-check"></i>{% else %}<i class="bi-x"></i>{% endif %}
                        </h4>
                    </div>

                    <p class="card-test">{{ task.content }}</p>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <form action="{{ path('task.toggle', {'id' : task.id }) }}">
                            <button class="btn btn-success btn-sm">
                                {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                            </button>
                        </form>
                        <form action="{{ path('task.delete', {'id' : task.id }) }}">
                            <button class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task.create') }}" class="btn btn-warning float-end">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
